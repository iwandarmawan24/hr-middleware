# ============================================
# HRIS MIDDLEWARE - DEMO ENVIRONMENT CONFIG
# ============================================

# Environment
ENVIRONMENT=demo
NODE_ENV=development

# Mock Talenta API
TALENTA_API_URL=http://mock-talenta:3001
TALENTA_ACCESS_TOKEN=demo-token
TALENTA_COMPANY_ID=1

# Middleware Database
DB_HOST=postgres-middleware
DB_PORT=5432
DB_NAME=hris_metadata
DB_USER=hris
DB_PASSWORD=hrispass

# Mock HCM Database
HCM_DB_HOST=postgres-hcm
HCM_DB_PORT=5432
HCM_DB_NAME=mock_hcm
HCM_DB_USER=hcm
HCM_DB_PASSWORD=hcmpass

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# SFTP Configuration
SFTP_HOST=sftp-server
SFTP_PORT=22
SFTP_USER=hris
SFTP_PASSWORD=hrispass
SFTP_INBOUND_PATH=/data/inbound
SFTP_ARCHIVE_PATH=/data/archive

# Encryption (demo keys)
PGP_PUBLIC_KEY_PATH=/keys/oic_public.asc
PGP_PRIVATE_KEY_PATH=/keys/oic_private.asc
PDF_OWNER_PASSWORD=hris-admin-2024

# Processing
BUSINESS_UNIT=MY
BATCH_SIZE=50
MAX_CONCURRENT=5

# Feature Flags
USE_MOCK_TALENTA=true
USE_MOCK_OIC=true
SKIP_ENCRYPTION=false
SKIP_UPLOAD=false

# Scheduler
SCHEDULER_ENABLED=false
SYNC_CRON=0 2 * * *
