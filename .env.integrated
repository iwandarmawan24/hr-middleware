# ========================================
# HRIS MIDDLEWARE - INTEGRATED ENVIRONMENT
# ========================================
# This environment uses REAL Talenta API instead of mock

# ========== MEKARI/TALENTA CREDENTIALS ==========
# IMPORTANT: Get these from your Mekari account
MEKARI_API_BASE_URL=https://api.mekari.com
MEKARI_API_CLIENT_ID=your_client_id_here
MEKARI_API_CLIENT_SECRET=your_client_secret_here

# Talenta Configuration
TALENTA_ACCESS_TOKEN=
TALENTA_COMPANY_ID=1

# ========== DATABASE PASSWORDS ==========
DB_PASSWORD=hrispass_production
HCM_DB_PASSWORD=hcmpass_production

# ========== SFTP PASSWORDS ==========
SFTP_PASSWORD=sftp_secure_password

# ========== VAULT ==========
VAULT_TOKEN=production_vault_token

# ========== MOCK OIC (set false to use real OIC) ==========
USE_MOCK_OIC=true

# ========== OPTIONAL: SCHEDULER ==========
SCHEDULER_ENABLED=true
SYNC_CRON=0 2 * * *
CLEANUP_CRON=0 0 * * 0

# ========== OPTIONAL: PROCESSING ==========
BATCH_SIZE=50
MAX_CONCURRENT=5
BUSINESS_UNIT=MY
